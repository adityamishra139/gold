enum Category {
  RING     @map("ring")
  NECKLACE @map("necklace")
  BRACELET @map("bracelet")
  EARRING  @map("earring")
  PENDANT  @map("pendant")
  CHAIN    @map("chain")
  PAYAL    @map("payal")
  BANGLE   @map("bangle")
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  password  String
  isAdmin   Boolean @default(false)
}

model GoldItem {
  id        Int      @id @default(autoincrement())
  name      String
  category  Category
  price     Float
  rating    Float
  image     String?
  createdAt DateTime @default(now())
  description String
}

model Query {
  id    Int    @id @default(autoincrement())
  name  String
  email String
  query String
}
